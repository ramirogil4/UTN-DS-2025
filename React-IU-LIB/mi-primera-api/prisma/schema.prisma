generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int @id   @default(autoincrement())
  name        String    @db.VarChar(50)
  surname     String    @db.VarChar(50)
  email       String    @unique
  role        Role      @default(USER)
  password    String    @db.VarChar(255)
  dateOfBirth DateTime
  createdAt   DateTime  @default(now())
  gender      Gender
  genreId     Int
  genre       Genre   @relation(fields: [genreId], references: [id])
}

model Genre {
  id     Int     @id @default(autoincrement())
  name   String  @db.VarChar(50)
  books  Book[]  //Un genero puede pertenecer a muchos libros
  users User[]  //Un genero favorito puede pertenecer a muchos usuarios 
}

model Book {
  id        Int     @id @default(autoincrement())
  title     String  @db.VarChar(50)
  genreId   Int
  genre     Genre   @relation(fields: [genreId], references: [id])
  authorId  Int
  author    Author @relation(fields: [authorId], references: [id])
}

model Author {
  id         Int @id @default(autoincrement())
  name       String @db.VarChar(50)
  surname    String @db.VarChar(50)
  books      Book[] //Un autor puede pertenecer a muchos libros
}

enum Role {
  ADMIN
  USER
}

enum Gender {
  MASCULINO
  FEMENINO
  OTRO
}







